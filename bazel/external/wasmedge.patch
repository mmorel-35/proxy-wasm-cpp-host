 function(wasmedge_setup_spdlog)
+  # When building under Bazel with external dependencies, create imported targets
+  # Bazel handles fmt and spdlog separately through its dependency system
+  if(DEFINED ENV{EXT_BUILD_DEPS})
+    message(STATUS "Using fmt and spdlog from Bazel dependencies - creating imported targets")
+    
+    # Parse CMAKE_PREFIX_PATH to find fmt and spdlog include directories
+    set(fmt_include_dirs "")
+    set(spdlog_include_dirs "")
+    foreach(path ${CMAKE_PREFIX_PATH})
+      if(path MATCHES "fmt")
+        list(APPEND fmt_include_dirs "${path}")
+      endif()
+      if(path MATCHES "spdlog")
+        list(APPEND spdlog_include_dirs "${path}")
+      endif()
+    endforeach()
+    
+    # Create fmt::fmt imported target if not already defined
+    if(NOT TARGET fmt::fmt)
+      add_library(fmt::fmt INTERFACE IMPORTED)
+      if(fmt_include_dirs)
+        set_target_properties(fmt::fmt PROPERTIES
+          INTERFACE_INCLUDE_DIRECTORIES "${fmt_include_dirs}"
+        )
+      endif()
+    endif()
+    
+    # Create spdlog::spdlog imported target if not already defined
+    if(NOT TARGET spdlog::spdlog)
+      add_library(spdlog::spdlog INTERFACE IMPORTED)
+      if(spdlog_include_dirs)
+        # Combine spdlog and fmt include directories
+        list(APPEND spdlog_include_dirs ${fmt_include_dirs})
+        set_target_properties(spdlog::spdlog PROPERTIES
+          INTERFACE_INCLUDE_DIRECTORIES "${spdlog_include_dirs}"
+        )
+      endif()
+      target_link_libraries(spdlog::spdlog INTERFACE fmt::fmt)
+    endif()
+    
+    return()
+  endif()
   if(TARGET spdlog::spdlog)
     return()
   endif()
