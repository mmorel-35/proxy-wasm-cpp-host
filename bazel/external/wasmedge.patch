 function(wasmedge_setup_spdlog)
+  # When building under Bazel with external dependencies, create imported targets
+  # Bazel handles fmt and spdlog separately through its dependency system
+  if(DEFINED ENV{EXT_BUILD_DEPS})
+    message(STATUS "Using fmt and spdlog from Bazel dependencies - creating imported targets")
+    
+    # Use the EXT_BUILD_DEPS directory which should contain all dependencies
+    set(deps_dir "$ENV{EXT_BUILD_DEPS}")
+    message(STATUS "EXT_BUILD_DEPS: ${deps_dir}")
+    
+    # Find fmt and spdlog include directories in the deps directory
+    file(GLOB_RECURSE fmt_headers "${deps_dir}/**/fmt/*.h")
+    file(GLOB_RECURSE spdlog_headers "${deps_dir}/**/spdlog/*.h")
+    
+    list(LENGTH fmt_headers fmt_headers_count)
+    list(LENGTH spdlog_headers spdlog_headers_count)
+    message(STATUS "Found ${fmt_headers_count} fmt headers")
+    message(STATUS "Found ${spdlog_headers_count} spdlog headers")
+    
+    set(fmt_include_dirs "")
+    set(spdlog_include_dirs "")
+    
+    if(fmt_headers)
+      list(GET fmt_headers 0 fmt_header)
+      get_filename_component(fmt_include_dir "${fmt_header}" DIRECTORY)
+      get_filename_component(fmt_include_dir "${fmt_include_dir}" DIRECTORY)
+      list(APPEND fmt_include_dirs "${fmt_include_dir}")
+      message(STATUS "Found fmt includes: ${fmt_include_dir}")
+    endif()
+    
+    if(spdlog_headers)
+      list(GET spdlog_headers 0 spdlog_header)
+      get_filename_component(spdlog_include_dir "${spdlog_header}" DIRECTORY)
+      get_filename_component(spdlog_include_dir "${spdlog_include_dir}" DIRECTORY)
+      list(APPEND spdlog_include_dirs "${spdlog_include_dir}")
+      message(STATUS "Found spdlog includes: ${spdlog_include_dir}")
+    endif()
+    
+    if(NOT fmt_include_dirs OR NOT spdlog_include_dirs)
+      message(FATAL_ERROR "Failed to find fmt or spdlog includes in ${deps_dir}")
+    endif()
+    
+    # Create fmt::fmt imported target if not already defined
+    if(NOT TARGET fmt::fmt)
+      add_library(fmt::fmt INTERFACE IMPORTED)
+      if(fmt_include_dirs)
+        set_target_properties(fmt::fmt PROPERTIES
+          INTERFACE_INCLUDE_DIRECTORIES "${fmt_include_dirs}"
+        )
+      endif()
+    endif()
+    
+    # Create spdlog::spdlog imported target if not already defined
+    if(NOT TARGET spdlog::spdlog)
+      add_library(spdlog::spdlog INTERFACE IMPORTED)
+      if(spdlog_include_dirs)
+        # Combine spdlog and fmt include directories
+        list(APPEND spdlog_include_dirs ${fmt_include_dirs})
+        set_target_properties(spdlog::spdlog PROPERTIES
+          INTERFACE_INCLUDE_DIRECTORIES "${spdlog_include_dirs}"
+        )
+      endif()
+      target_link_libraries(spdlog::spdlog INTERFACE fmt::fmt)
+    endif()
+    
+    return()
+  endif()
   if(TARGET spdlog::spdlog)
     return()
   endif()
